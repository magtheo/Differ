{
  "name": "differ",
  "displayName": "Differ",
  "description": "Apply LLM-generated code changes safely with preview and rollback capabilities",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "differ.openPanel",
        "title": "Open Differ",
        "category": "Differ"
      },
      {
        "command": "differ.applyChanges",
        "title": "Apply Changes",
        "category": "Differ"
      },
      {
        "command": "differ.clearChanges",
        "title": "Clear Changes",
        "category": "Differ"
      },
      {
        "command": "differ.showHistory",
        "title": "Show Change History",
        "category": "Differ"
      },
      {
        "command": "differ.undoLastChanges",
        "title": "Undo Last Changes",
        "category": "Differ"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "differ",
          "title": "Differ",
          "icon": "$(diff)"
        }
      ]
    },
    "views": {
      "differ": [
        {
          "type": "webview",
          "id": "differ-panel",
          "name": "Code Patcher",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Differ",
      "properties": {
        "differ.logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info",
          "description": "Set the logging level for the extension"
        },
        "differ.autoBackup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create backups before applying changes"
        },
        "differ.confirmBeforeApply": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before applying changes"
        },
        "differ.maxHistoryEntries": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of history entries to keep"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile-webview": "npm run compile && npm run copy-webview",
    "copy-webview": "mkdir -p out/webview && cp -r src/webview/* out/webview/ 2>/dev/null || (mkdir -p out/webview && echo 'No webview files to copy')",
    "clean": "rm -rf out/",
    "rebuild": "npm run clean && npm run compile-webview",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext .ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "tree-sitter": "^0.25.0",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-typescript": "^0.23.2"
  }
}